                <tr>
                    <td>Nuk ka të dhëna</td>
                </tr>
            }
            <tr>
                <td>@Model.BondModel?.Name</td>
                <td>@Model.BondModel?.ValueNow</td>
                <td>@Model.BondModel?.Origin</td>
                <td>@Model.BondModel?.Date</td>
                <td>@Model.BondModel?.Bond</td>
            </tr>
        </tbody>
    </table>
</div>
