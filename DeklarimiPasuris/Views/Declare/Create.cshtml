                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label" asp-for="FinancialObligationModel!.Kreditore">Creditor</label>
                        <input class="form-control" asp-for="FinancialObligationModel!.Kreditore" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label" asp-for="FinancialObligationModel!.Debitore">Debtor</label>
