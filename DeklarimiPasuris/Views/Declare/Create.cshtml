                        <label class="form-label" asp-for="RealEstateModel!.Price">Price</label>
                        <input class="form-control" type="number" asp-for="RealEstateModel!.Price" />
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label class="form-label" asp-for="RealEstateModel!.Owned">Ownership</label>
                        <input class="form-control" type="text" asp-for="RealEstateModel!.Owned" />
                    </div>
                </div>
            </div>
        </div>
        <div class="p-2 rounded mb-5" style="background-color: #eee">
            <h4 class="text-primary fw-bold p-3 rounded text-center" style="background-color: #D9D9D9">Movable Assets over (3000.00) Euros</h4>
