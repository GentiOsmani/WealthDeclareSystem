                        <input class="form-control" asp-for="CryptoModel!.ValueBought" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label class="form-label" asp-for="CryptoModel!.ValueBought">Purchase value</label>
                        <input class="form-control" asp-for="CryptoModel!.ValueBought" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <div class="form-group">
                        <label class="form-label" asp-for="CryptoModel!.Quantity">Quantity</label>
                        <input class="form-control" asp-for="CryptoModel!.Quantity" />
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label class="form-label" asp-for="CryptoModel!.Origine">Origin</label>
